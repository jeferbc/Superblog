<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% @posts.each do |post| %>
        <div class="jumbotron">
          <h2><%= post.title %></h2>
          <h4><%= post.subtitle %></h4>
          <p><%= post.content_post %></p>
          <p><%= link_to 'Show', post, class:"btn btn-success" %> <%= link_to 'Edit', edit_post_path(post), class:"btn btn-warning" %> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></p>
        </div>
      <% end %>
      <%= link_to 'New Post', new_post_path %>
      </div>
  </div>
</div>
